<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.snghnaveen.amoledstopwatch.MainActivity"
    android:background="@color/colorPrimaryDark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/time_view"
        android:layout_centerVertical="true"
        android:textSize="80sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:longClickable="true"
        />


    <LinearLayout
        android:layout_width="0px"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_view"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/options"
            android:src="@drawable/ic_blur_off_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:longClickable="true"

            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/stop"
            android:src="@drawable/ic_stop_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:onClick="onClickStop"
            android:longClickable="true"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:layout_margin="5dp"
            android:src="@drawable/ic_play_arrow_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:onClick="onClickStart"
            android:longClickable="true"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:src="@drawable/ic_replay_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:onClick="onClickReset"
            android:longClickable="true"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="0px"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/help"
            android:layout_margin="5dp"
            android:src="@drawable/ic_info_outline_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:longClickable="true"

            />



        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bright"
            android:src="@drawable/ic_brightness_non_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:longClickable="true"
             />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/share"
            android:layout_margin="5dp"
            android:src="@drawable/ic_share_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:longClickable="true"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            android:src="@drawable/ic_exit_to_app_white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:longClickable="true"

            />


    </LinearLayout>
</RelativeLayout>